---
import Wrapper from '../components/wrapper.astro';
import Layout from '../layouts/Layout.astro';

const { self } = Astro;

const getAstroModule = self.moduleId.split('/').slice(-1)[0];
---

<Layout>
  <Wrapper>
    <div class="flex flex-col">
      <section class="m-auto text-center">
        <h1 class="dark:text-white text-5xl font-semibold">404</h1>
        <p class="dark:text-white">Pagina niet gevonden</p>
        <a
          class="dark:text-orange-600 text-blue-600 underline font-semibold relative z-10"
          href="/">Ga terug naar de kalender</a
        >
      </section>

      <astro-f1-car id="container" data-astro-module-id={getAstroModule}
      ></astro-f1-car>
    </div>
  </Wrapper>
</Layout>

<style>
  #container {
    position: absolute;
    width: 100%;
    height: 100vh;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
</style>

<script>
  import { F1CarScene } from '../three/f1-car-scene';

  class AstroF1Car extends HTMLElement {
    constructor() {
      super();

      const Astro = this.dataset.astroModuleId;

      if (Astro === '404.astro') {
        F1CarScene();
      }
    }
  }

  customElements.define('astro-f1-car', AstroF1Car);
</script>
