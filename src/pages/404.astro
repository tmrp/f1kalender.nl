---
import Wrapper from '../components/wrapper.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <Wrapper>
    <div class="flex flex-col">
      <section class="m-auto text-center">
        <h1 class="dark:text-white text-5xl font-semibold">404</h1>
        <p class="dark:text-white">Pagina niet gevonden</p>
        <a
          class="dark:text-orange-600 text-blue-600 underline font-semibold relative z-10"
          href="/">Ga terug naar de kalender</a
        >
      </section>

      <div id="container"></div>
    </div>
  </Wrapper>
</Layout>

<style>
  #container {
    position: absolute;
    width: 100%;
    height: 100vh;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
</style>

<script src="../three/f1-car-scene.js"></script>
